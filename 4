#include <stdio.h>

void printBinary(int n) {
    if (n == 0) {
        printf("0");
        return;
    }
    
    int binary[32];
    int i = 0;
    if (n < 0) {
        printf("-");
        n = -n;
    }
    while (n > 0) {
        binary[i] = n % 2;
        n /= 2;
        i++;
    }
    for (int j = i - 1; j >= 0; j--) {
        printf("%d", binary[j]);
    }
}

int main() {
    int n;
    scanf("%d", &n);
    printBinary(n);
    return 0;
}
