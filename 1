#include <stdio.h>

int main() {
    int month, year;

    printf("Enter the month (1-12): ");
    scanf("%d", &month);

    printf("Enter the year (YYYY): ");
    scanf("%d", &year);

    int days;

    // Проверяем количество дней в месяце в зависимости от его номера
    switch (month) {
        case 2:
            if ((year % 4 == 0 && year % 100 != 0) || year % 400 == 0)
                days = 29;
            else
                days = 28;
            break;
        case 4:
        case 6:
        case 9:
        case 11:
            days = 30;
            break;
        default:
            days = 31;
            break;
    }

    printf("Number of days in the month: %d\n", days);

    return 0;
}
